extends index
block append linksCss  
  link(rel="stylesheet" , href="css/singup/singup.css")
  
block pageTitle
  title Sing In
  
block pageContent
  |
  <!-- start Nav -->
  nav(class="navbar navbar-toggleable-md navbar-light")
     .container
          |
          |
          a(class="navbar-brand", href="index.html")
              img(src="img/Home-page/logo.png")

  |
  |
  <!-- End Nav -->
  |
  |
  <!-- start SingUp -->
  .singup
    .container
      .row
        .left-singup(class="col-lg-6 col-md-12 col-sm-12 text-center")
          h1 Sing Up
          p Already a member of Oow?  <a href="login.html"> Log In</a>
          
          form
            .form-div
              input(type="text" , name="firstname" , placeholder="First Name" , class="half-btn" , required)
              input(type="text" , name="lastname" , placeholder="Last Name" , class="half-btn", required )
            .form-div
              input(type="email" , id="email" , class="btn-sub", name="email", placeholder="Email Address" required)
            .form-div
              select
                  option Cairo
                  option Alex
                  option Select a country
                  option Select a country
            .form-div
              input(type="password" , class="btn-sub" , placeholder="Create password" minlength="8" pattern="^(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" title="Please include at least 1 uppercase character, 1 lowercase character, and 1 number." required)
            .form-div(class="flex")  
              div
                input(input type="radio" id="contactChoice1" name="contact"  )
                label(for="contactChoice1") I want to marry
              div  
                input(input type="radio" id="contactChoice2" name="contact"   )
                label(for="contactChoice2") I want to work

            p(class="upperbutton") I Want To:
            .form-div
              input(type="checkbox" id="cb1" class="type-work")
              label(for="cb1" ) Send me wedding ideas, tips, and special offers!             

            button(type="submit" class=" submit") SingUp   
                         
        .right-singup(class="col-lg-6 col-md-12 col-sm-12 ")
          .img-one
            img(src="img/sing/Path 219.svg")
          div(class="text-center")  
            h1 Your personal wedding plan starts now  
            p Advice, tools, and the best local vendors to have a wedding that's uniquely you (cue the confetti!)
          .img-two
            img(src="img/sing/undraw_wedding_t1yl (1).svg")
  
            
